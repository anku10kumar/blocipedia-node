<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>

      <h1><%= wiki.title %></h1>
      <h2><%= wiki.private ? 'Private' : 'Public' %></h2>

      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>

      <% if (currentUser && (currentUser.isOwner(wiki.userId) || currentUser.isAdmin())) { %>
  <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
  <% } %>


      <p><%- wiki.body %></p>
    </main>

    <% include ../static/partials/baseScript.ejs %>

  </body>
</html>
