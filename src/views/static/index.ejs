  </head>
  <body>



      <% include ./partials/navbar.ejs %>


      <main class="container">

        <% include ./partials/messages.ejs %>

        <header style="text-align: center;" class="jumbotron my-4">
          <h1 class="display-3">Welcome to Blocipedia</h1>
          <ion-icon name="apps" style="font-size: 80px;"></ion-icon>
          <p class="lead">An application for users to create, collaborate, and share wikis.</p>
          <a href="/users/signup" class="btn btn-secondary btn-lg">Sign Up</a>
        </header>


        <section class="row text-left">

